{
    "_comment": "API-only configuration for LightMem MCP Server. Set OPENAI_API_KEY env var or fill in api_key below.",
    "pre_compress": false,
    "topic_segment": false,
    "messages_use": "user_only",
    "metadata_generate": true,
    "text_summary": true,
    "memory_manager": {
        "model_name": "openai",
        "configs": {
            "model": "gpt-4o-mini",
            "api_key": "",
            "max_tokens": 16000,
            "openai_base_url": "https://api.openai.com/v1"
        }
    },
    "extract_threshold": 0.1,
    "index_strategy": "embedding",
    "text_embedder": {
        "model_name": "openai",
        "configs": {
            "model": "text-embedding-3-small",
            "api_key": "",
            "openai_base_url": "https://api.openai.com/v1",
            "embedding_dims": 1536
        }
    },
    "retrieve_strategy": "embedding",
    "embedding_retriever": {
        "model_name": "qdrant",
        "configs": {
            "collection_name": "lightmem_memory",
            "embedding_model_dims": 1536,
            "path": "./lightmem_data"
        }
    },
    "update": "offline",
    "logging": {
        "level": "INFO",
        "file_enabled": false
    }
}
